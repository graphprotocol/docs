{
  "name": "@graphprotocol/docs",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "rm -rf .next && next build",
    "start": "next start",
    "export": "rm -rf out && next export -o out/docs",
    "prettier": "prettier . --write",
    "prettier:check": "prettier . --check",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.mjs && yarn prettier:check && yarn typecheck",
    "lint:fix": "eslint . --fix --ext .js,.jsx,.ts,.tsx,.mjs && yarn prettier && yarn typecheck",
    "typecheck": "tsc --noEmit",
    "docker:build": "DOCKER_BUILDKIT=1 docker build . -t docs",
    "docker:up": "docker run --rm -it -p 3000:80 -v \"$(pwd)/nginx.conf:/etc/nginx/nginx.conf\" docs",
    "docker:clean": "docker builder prune",
    "prepare": "husky install && chmod +x .husky/*",
    "pre-commit": "lint-staged --concurrent false",
    "pre-push": "yarn build"
  },
  "dependencies": {
    "@docsearch/react": "^3.2.1",
    "@edgeandnode/components": "^23.0.10",
    "@emotion/react": "^11.10.0",
    "@mdx-js/loader": "^2.1.3",
    "@mdx-js/react": "^2.1.3",
    "@next/mdx": "^12.2.5",
    "@radix-ui/react-collapsible": "1.0.0",
    "@radix-ui/react-popover": "^1.0.0",
    "@radix-ui/react-visually-hidden": "^1.0.0",
    "@reach/auto-id": "^0.17.0",
    "lodash-es": "^4.17.21",
    "next": "^12.2.5",
    "next-seo": "^5.5.0",
    "prism-react-renderer": "^1.3.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-intersection-observer": "^9.4.0",
    "react-use": "^17.4.0",
    "remark-gfm": "^3.0.1",
    "theme-ui": "^0.12.1",
    "use-bus": "^2.5.1"
  },
  "devDependencies": {
    "@edgeandnode/eslint-config": "^1.0.3",
    "@sindresorhus/slugify": "^2.1.0",
    "@svgr/webpack": "^6.3.1",
    "@types/color": "^3.0.3",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^16.11.56",
    "@types/react": "^17.0.48",
    "@types/react-dom": "^17.0.17",
    "acorn": "^8.8.0",
    "acorn-jsx": "^5.3.2",
    "eslint": "^8.23.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "path": "^0.12.7",
    "prettier": "^2.7.1",
    "remark-frontmatter": "^4.0.1",
    "remark-mdx-frontmatter": "^2.0.3",
    "serialize-as-code": "^2.0.2",
    "typescript": "4.8.2",
    "unist-util-visit": "^4.1.1",
    "url": "^0.11.0"
  },
  "resolutions": {
    "@types/react": "^17.0.48",
    "@types/react-dom": "^17.0.17"
  },
  "engines": {
    "node": ">=16"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,mjs}": "eslint --fix",
    "**/*.{js,jsx,ts,tsx,mjs,mdx,json}": "prettier --write"
  }
}
